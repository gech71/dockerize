worker_processes auto;

error_log C:\\nginx/logs/error.log;
pid       C:\\nginx/logs/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
    
    # Log format
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';
    
    access_log C:/nginx/logs/access.log main;
    
    # Performance optimizations for Windows
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    
    # Upstream with both servers, one marked as backup
    upstream nextjs_backend {
        least_conn;
        
        # Primary server (active)
        server 127.0.0.1:3001 backup;
        
        # Backup server (inactive until needed)
        server 127.0.0.1:3002;
    }

    # Status endpoint for monitoring (internal only)
    server {
        listen 127.0.0.1:8080;
        
        location /nginx_status {
            stub_status;
            access_log off;
            allow 127.0.0.1;
            deny all;
        }
        
        location /health {
            access_log off;
            return 200 "nginx healthy\n";
            add_header Content-Type text/plain;
        }
    }

    # Main server
    server {
        listen 80;
        server_name localhost;
        
        # Health check endpoint for zero-downtime deployments
        location /health {
            proxy_pass http://nextjs_backend;
            proxy_http_version 1.1;
            proxy_set_header Connection "";
            access_log off;
        }

        location / {
            proxy_pass http://nextjs_backend;
            proxy_http_version 1.1;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Port $server_port;
            
            # Timeouts - shorter for faster failover
            proxy_connect_timeout 3s;
            proxy_read_timeout 30s;
            proxy_send_timeout 30s;
            
            # Buffering
            proxy_buffering off;
            proxy_request_buffering off;
            
            # Connection handling
            proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
            proxy_next_upstream_timeout 2s;
            proxy_next_upstream_tries 2;
            
            # Keepalive
            proxy_set_header Connection "";
        }
        
        # Error pages
        error_page 500 502 503 504 /50x.html;
        location = /50x.html {
            root html;
        }
    }
}